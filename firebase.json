{
    "hosting": {
        "public": "./dist",
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }],
        "headers": [
            { "source": "/sw.js", "headers": [{ "key": "Cache-Control", "value": "no-store, max-age=0, no-cache" }] }
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "*.log"
        ]
    }
}
